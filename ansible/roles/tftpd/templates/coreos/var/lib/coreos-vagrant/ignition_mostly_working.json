{
  "ignition": { "version": "2.0.0" },
  "passwd": {
    "users": [{
      "name": "jet",
      "passwordHash": "",
      "sshAuthorizedKeys":[
        "ssh-rsa "
      ],
      "create": {
        "homeDir": "/home/jet",
        "shell": "/bin/bash"
      }
    }]
  },
  "storage": {
    "filesystems": [{
      "mount": {
        "device": "/dev/sda",
        "format": "ext4",
        "create": {
          "force": true,
          "options": [ "-L", "ROOT" ]
        }
      }
    }],
    "files": [{
      "filesystem": "root",
      "path": "/foo/bar",
      "contents": { "source": "data:,example%20file%0A" }
    }]
  }
}